<?xml version = "1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_calendar_resources_event_form" model="ir.ui.view">
            <field name="name">Calendar: resources</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='partner_ids']"
                       position="attributes">
                    <attribute name="class"></attribute>
                </xpath>
                <xpath expr="//div[@class='oe_title']" position="inside">
                    <label for="resource_ids" string="Resources"/>
                    <h2>
                        <field name="resource_ids" widget="many2many_tags"
                               class="oe_inline"/>
                    </h2>
                    <label for="resource_calendar_leave_ids" string="Resources Leaves"/>
                    <h2>
                    <field name="resource_calendar_leave_ids"
                           widget="many2many_tags"
                           readonly="1"
                           class="oe_inline"/>
                    </h2>
                </xpath>
            </field>
        </record>

        <record id="view_calendar_resources_event_form_popup"
                model="ir.ui.view">
            <field name="name">Calendar popup: resources</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id"
                   ref="calendar.view_calendar_event_form_popup"/>
            <field name="arch" type="xml">
                <field name="partner_ids" position="after">
                    <field name="resource_ids" widget="many2many_tags"/>
                    <field name="resource_calendar_leave_ids"
                           widget="many2many_tags"
                           readonly="1"
                           class="oe_inline"/>
                </field>
            </field>
        </record>

    </data>
</openerp>