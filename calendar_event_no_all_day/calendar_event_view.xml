<?xml version = "1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_calendar_resources_no_all_day_form"
                model="ir.ui.view">
            <field name="name">Calendar: Remove all day</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <label for="allday" position="attributes">
                    <attribute name="invisible">1</attribute>
                </label>
                <field name="allday" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

        <record id="view_calendar_resources_no_all_day_form_popup"
                model="ir.ui.view">
            <field name="name">Calendar popup: Remove all day</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id"
                   ref="calendar.view_calendar_event_form_popup"/>
            <field name="arch" type="xml">
                <field name="allday" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

    </data>
</openerp>
